  "display_override": [
    "standalone",
    "fullscreen",
    "minimal-ui",
    "window-controls-overlay"
  ],
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#ffffff",
  "orientation": "portrait-primary",
  "lang": "en",
  "dir": "ltr",
  "protocol_handlers": [
    {
      "protocol": "web+toolhub",
      "url": "/?action=%s"
    }
  ],
  "launch_handler": {
